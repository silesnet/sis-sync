<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <import resource="job-launcher-context.xml" />

  <bean id="sisInvoiceJob" parent="simpleJob">
    <property name="steps">
      <list>
        <ref bean="sisInvoiceStep" />
        <ref bean="spsInvoiceImportTaskletStep" />
        <ref bean="spsInvoiceUpdateStep" />
        <ref bean="spsSpsInvoiceUpdateStep" />
      </list>
    </property>
  </bean>

  <bean id="sisInvoiceStep" parent="simpleStep">
    <property name="itemReader">
      <ref bean="sisInvoiceItemReader" />
    </property>
    <property name="itemWriter">
      <bean class="cz.silesnet.sis.sync.item.writer.SisInvoiceItemWriter"
        p:ico="${sps.silesnet.ico}" p:resource="${sis.invoices.resource}" />
    </property>
  </bean>

  <bean name="sisInvoiceItemReader"
    class="org.springframework.batch.item.database.DrivingQueryItemReader">
    <property name="keyCollector">
      <bean
        class="org.springframework.batch.item.database.support.SingleColumnJdbcKeyCollector"
        p:jdbcTemplate-ref="jdbcTemplate">
        <property name="keyMapper">
          <bean class="cz.silesnet.sis.sync.mapping.InvoiceRowMapper" p:dao-ref="invoiceDao" />
        </property>
        <property name="sql">
          <value><![CDATA[
            SELECT bills.id FROM bills
              INNER JOIN invoicings
                ON bills.invoicing_id = invoicings.id
              WHERE synchronized IS NULL
                AND invoicings.country = 10
              ORDER BY bills.id
          ]]></value>
        </property>
        <property name="restartSql">
          <value><![CDATA[
            SELECT bills.id FROM bills
              INNER JOIN invoicings
                ON bills.invoicing_id = invoicings.id
              WHERE synchronized IS NULL
                AND invoicings.country = 10
                AND id > ?
              ORDER BY bills.id
          ]]></value>
        </property>
      </bean>
    </property>
  </bean>

  <bean id="invoiceDao" class="cz.silesnet.sis.sync.dao.impl.JdbcInvoiceDao"
    p:template-ref="jdbcTemplate" />

  <bean id="spsInvoiceImportTaskletStep" parent="taskletStep">
    <property name="tasklet">
      <bean class="cz.silesnet.sis.sync.tasklet.SpsImportTasklet"
        p:input="${sis.invoices.resource}" p:output="${sps.invoices.resource}"
        p:spsExecutable="${sps.executable.resource}" p:login="${sps.login}"
        p:password="${sps.password}" p:database="${sps.database}"
        p:iniFileName="${sps.ini.filename}" />
    </property>
  </bean>

  <bean id="spsInvoiceUpdateStep" parent="simpleStep">
    <property name="itemReader">
      <bean class="cz.silesnet.sis.sync.item.reader.SpsInvoiceItemReader"
        p:resource="${sps.invoices.resource}" />
    </property>
    <property name="itemWriter">
      <bean
        class="org.springframework.batch.item.database.BatchSqlUpdateItemWriter"
        p:jdbcTemplate-ref="jdbcTemplate">
        <property name="itemPreparedStatementSetter">
          <bean
            class="cz.silesnet.sis.sync.item.writer.InvoiceUpdatePreparedStatementSetter" />
        </property>
        <property name="sql">
          <value><![CDATA[
            UPDATE bills
              SET synchronized = ?
              WHERE id = ?
          ]]></value>
        </property>
      </bean>
    </property>
  </bean>

  <bean id="spsSpsInvoiceUpdateStep" parent="simpleStep">
    <property name="itemReader">
      <bean
        class="cz.silesnet.sis.sync.item.reader.SpsInvoiceBankAccountItemReader"
        p:resource="${sps.invoices.resource}" p:dao-ref="invoiceDao" />
    </property>
    <property name="itemWriter">
      <bean
        class="org.springframework.batch.item.database.BatchSqlUpdateItemWriter"
        p:jdbcTemplate-ref="spsJdbcTemplate">
        <property name="itemPreparedStatementSetter">
          <bean
            class="cz.silesnet.sis.sync.item.writer.SpsInvoiceUpdatePreparedStatementSetter" />
        </property>
        <property name="sql">
          <value><![CDATA[
            UPDATE FA
              SET
                Ucet = ?,
                KodBanky = ?
              WHERE ID = ?
          ]]></value>
        </property>
      </bean>
    </property>
  </bean>

  <bean id="spsJdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate"
    p:dataSource-ref="spsDataSource" />

  <bean id="spsDataSource" class="org.apache.commons.dbcp.BasicDataSource"
    p:driverClassName="${sps.jdbc.driver}" p:url="${sps.jdbc.url}"
    p:username="${sps.jdbc.user}" p:password="${sps.jdbc.password}" />

</beans>
