<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <import resource="job-launcher-context.xml" />

  <bean id="sisInvoiceJob" parent="simpleJob">
    <property name="steps">
      <list>
        <ref bean="prepareInvoices" />
        <ref bean="importInvoices" />
        <ref bean="confirmInvoicesImport" />
        <ref bean="updateInvoiceAccounts" />
      </list>
    </property>
  </bean>

  <bean id="prepareInvoices" parent="simpleStep">
    <property name="itemReader">
      <ref bean="sisInvoiceItemReader" />
    </property>
    <property name="itemWriter">
      <bean class="cz.silesnet.sis.sync.item.writer.SisInvoiceItemWriter"
        p:ico="${pohoda.ico}" p:resource-ref="invoicesImportFile" />
    </property>
  </bean>

  <bean name="sisInvoiceItemReader"
    class="org.springframework.batch.item.database.DrivingQueryItemReader">
    <property name="keyCollector">
      <bean
        class="org.springframework.batch.item.database.support.SingleColumnJdbcKeyCollector"
        p:jdbcTemplate-ref="jdbcTemplate">
        <property name="keyMapper">
          <bean class="cz.silesnet.sis.sync.mapping.InvoiceRowMapper"
            p:dao-ref="invoiceDao" />
        </property>
        <property name="sql">
          <value><![CDATA[
            SELECT bills.id FROM bills
              INNER JOIN invoicings
                ON bills.invoicing_id = invoicings.id
              WHERE synchronized IS NULL
                AND invoicings.country = 10
              ORDER BY bills.id
          ]]></value>
        </property>
        <property name="restartSql">
          <value><![CDATA[
            SELECT bills.id FROM bills
              INNER JOIN invoicings
                ON bills.invoicing_id = invoicings.id
              WHERE synchronized IS NULL
                AND invoicings.country = 10
                AND bills.id > ?
              ORDER BY bills.id
          ]]></value>
        </property>
      </bean>
    </property>
  </bean>

  <bean id="importInvoices" parent="taskletStep">
    <property name="tasklet">
      <bean parent="importTasklet" p:input-ref="invoicesImportFile"
        p:output-ref="invoicesResponseFile" p:ini-ref="invoicesIniFile" />
    </property>
  </bean>

  <bean id="confirmInvoicesImport" parent="simpleStep">
    <property name="itemReader">
      <bean class="cz.silesnet.sis.sync.item.reader.SpsInvoiceItemReader"
        p:resource-ref="invoicesResponseFile" />
    </property>
    <property name="itemWriter">
      <bean
        class="org.springframework.batch.item.database.BatchSqlUpdateItemWriter"
        p:jdbcTemplate-ref="jdbcTemplate">
        <property name="itemPreparedStatementSetter">
          <bean
            class="cz.silesnet.sis.sync.item.writer.InvoiceUpdatePreparedStatementSetter" />
        </property>
        <property name="sql">
          <value><![CDATA[
            UPDATE bills
              SET synchronized = ?
              WHERE id = ?
          ]]></value>
        </property>
      </bean>
    </property>
  </bean>

  <bean id="updateInvoiceAccounts" parent="simpleStep">
    <property name="itemReader">
      <bean
        class="cz.silesnet.sis.sync.item.reader.SpsInvoiceBankAccountItemReader"
        p:resource-ref="invoicesResponseFile" p:dao-ref="invoiceDao"
        p:logImportErrors="false" />
    </property>
    <property name="itemWriter">
      <bean
        class="org.springframework.batch.item.database.BatchSqlUpdateItemWriter"
        p:jdbcTemplate-ref="spsJdbcTemplate">
        <property name="itemPreparedStatementSetter">
          <bean
            class="cz.silesnet.sis.sync.item.writer.SpsInvoiceUpdatePreparedStatementSetter" />
        </property>
        <property name="sql">
          <value><![CDATA[
            UPDATE FA
              SET
                Ucet = ?,
                KodBanky = ?
              WHERE ID = ?
          ]]></value>
        </property>
      </bean>
    </property>
  </bean>

  <bean id="invoicesImportFile" parent="resource">
    <constructor-arg value="${invoices.import.file.suffix}" />
  </bean>

  <bean id="invoicesResponseFile" parent="resource">
    <constructor-arg value="${invoices.response.file.suffix}" />
  </bean>

  <bean id="invoicesIniFile" parent="resource">
    <constructor-arg value="${invoices.ini.file.suffix}" />
  </bean>

  <bean id="invoiceDao" class="cz.silesnet.sis.sync.dao.impl.JdbcInvoiceDao"
    p:jdbcTemplate-ref="jdbcTemplate" />

</beans>
